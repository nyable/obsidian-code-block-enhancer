{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "types": ["svelte", "node"],
        "baseUrl": ".",
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "lib": ["DOM", "ES5", "ES6", "ES7"]
    },
    "include": ["**/*.ts", "**/*.svelte", "**/*.d.ts"]
}
